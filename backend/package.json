{
    "name": "blog-backend",
    "version": "1.0.1",
    "description": "个人博客后端 API",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx prisma/seed.ts",
        "ai:generate": "tsx src/manual-generate.ts",
        "pretest": "cross-env DATABASE_URL=\"file:./test.db\" prisma db push --accept-data-loss",
        "test": "cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
        "test:ui": "cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" vitest --ui"
    },
    "dependencies": {
        "@prisma/client": "^5.6.0",
        "@types/node-cron": "^3.0.11",
        "@types/sharp": "^0.31.1",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^4.2.1",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.0",
        "@types/supertest": "^6.0.3",
        "@vitest/ui": "^4.0.15",
        "cross-env": "^10.1.0",
        "jest": "^30.2.0",
        "prisma": "^5.6.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "tsx": "^4.6.0",
        "typescript": "^5.3.2",
        "vitest": "^4.0.15"
    }
}